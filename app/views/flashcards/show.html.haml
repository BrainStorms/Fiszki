- model_class = Flashcard
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:question) + ':'
  %br
  = @flashcard.question
%p
  %strong= model_class.human_attribute_name(:answer) + ':'
  %br
  = @flashcard.answer


= link_to t('.back', :default => t("helpers.links.back")), flashcards_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_flashcard_path(@flashcard), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), flashcard_path(@flashcard), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
