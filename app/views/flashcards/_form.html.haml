= form_for @flashcard do |f|
  - if @flashcard.errors.any?
    #error_explanation
      %h2= "#{pluralize(@flashcard.errors.count, "error")} prohibited this flashcard from being saved:"
      %ul
        - @flashcard.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question
    = f.text_field :question
  .field
    = f.label :answer
    = f.text_field :answer
  .actions
    = f.submit 'Save'
